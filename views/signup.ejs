<!DOCTYPE html>
<html lang="en">
<%-include('./partials/head')%>
<body>
    <%-include('./partials/header')%>
    <div class="container text-center signup-div">
        <h3 class="">Sign Up</h3>
    </div>
    <form class="col-md-4 signup-form" method="post" action="/signup">
        <div class="form-group">
            <label for="uname">Name <span>*</span></label>
            <input type="text" class="form-control" name="uname" id="uname" aria-describedby="emailHelp" placeholder="Enter name" required>
        </div>
        <div class="form-group">
            <label for="upyear">Passout Year</label>
            <input type="number" max="2099" class="form-control" name="upyear" id="upyear" aria-describedby="emailHelp" placeholder="Enter passout year (Eg: 2023)" value="2023">
        </div>
        <div class="form-group">
            <label for="ubranch">Branch</label>
            <select id="ubranch" class="selectpicker form-control" width="auto" name="ubranch">
                <option selected value="it" class="input-small">IT</option>
                <option value="cse">CSE</option>
                <option value="ece">ECE</option>
                <option value="eee">EEE</option>
                <option value="me">ME</option>
            </select>
        </div>
        <div class="form-group">
            <label for="uemail">Email address <span>*</span></label>
            <input type="email" class="form-control" name="uemail" id="uemail" aria-describedby="emailHelp" placeholder="Enter email" required>
        </div>
        <div class="form-group">
            <label for="upswd">Password <span>*</span></label>
            <input type="password" class="form-control" name="upswd" id="upswd" placeholder="Password" required>
        </div>
        <div class="form-group">
            <label for="urpswd">Retype Password <span>*</span></label>
            <input type="password" class="form-control" id="urpswd" name="urpswd" placeholder="Password" required>
        </div>
        <div class="col-md-12 text-center">
            <input type="submit" class="btn btn-primary text-center signup-btn" id="submit" value="REGISTER">
        </div>
        <div class="container text-center">
            <h6 id="hidden-msg"></h6>
        </div>
    </form>
    <div class="container text-center">
        <a href="/" class="signup-link">Login</a>
    </div>

    <%-include('./partials/footer')%>
    <script src="signup-script.js"></script>
</body>
</html>
   
   
